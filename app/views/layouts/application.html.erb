<!DOCTYPE html>
<html>
  <head>
    <title>Trabalho2Alejandro</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
  
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">Mercado</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link" aria-current="page" href="/">In√≠cio</a>
        </li>
        <%if user_signed_in? %>
        <li class="nav-item">
          <a class="nav-link" href="/clientes">Clientes</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/produtos">Produtos</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/pedidos">Pedidos</a>
        </li>

        <li class="nav-item">
          <a class="nav-link" href="/usuarios">Usuarios</a>
        </li>

        
        
        <%end%>
      </ul>
      <%# dropdown to login and registration in left %>
      <ul class="navbar-nav ms-auto">
        <li class="nav-item dropdown">
        <%# test if logged %>
        <% if user_signed_in? %>
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            <%= current_user.email %>
          </a>
          <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
            <li><%= link_to 'Sair', destroy_user_session_path, method: :delete, class: "dropdown-item" %></li>
          </ul>
        <% else %>
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            Login
          </a>
          <ul class="dropdown-menu dropdown-login" aria-labelledby="navbarDropdown">
            <li><%= link_to 'Registrar', new_user_registration_path, class: "dropdown-item" %></li>
            <li><%= link_to 'Entrar', new_user_session_path, class: "dropdown-item" %></li>
          </ul>
        <% end %>
        </li>
      </ul>

    </div>
  </div>
</nav>
   <div class="container mt-3">
      <%=render 'layouts/alerts' %>
      <%= yield %>
    </div>
  
  </body>
</html>
