<%= form_for @cliente do |f| %>
<% if @cliente.errors.any? %>
<div id="error_explanation" class="alert alert-danger">
  <h5>Verifique os erros abaixo:</h5>

  <ul>
    <% @cliente.errors.each do |error| %>
    <li><%= error.full_message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="field form-group">
  <%= f.label :nome %>
  <%= f.text_field :nome, class: "form-control",  :required => true  %>
</div>

<div class="field">
  <%= f.label :email %>
  <%= f.email_field :email, class: "form-control" %>
</div>

<div class="row">
  <div class="field col-4">
    <%= f.label :data_nascimento %>
    <%= f.date_field :data_nascimento, class: "form-control",  :required => true %>
  </div>
  <div class="field col-4">
    <%= f.label :profissao %>
    <%= f.text_field :profissao, class: "form-control", :required => true  %>
  </div>

  <div class="field col-4">
    <%= f.label :sexo %>
    <%= f.text_field :sexo, class: "form-control",  :required => true  %>
  </div>

</div>

<%= f.fields_for :endereco , @cliente.endereco || @cliente.build_endereco do |e| %>
<div class="row">
  <div class="field col-6">
    <%= e.label :rua %>
    <%= e.text_field :rua, class: "form-control",  :required => true  %>
  </div>
  <div class="field col-2">
    <%= e.label :numero %>
    <%= e.text_field :numero, class: "form-control",  :required => true  %>
  </div>

  <div class="field col-4">
    <%= e.label :bairro %>
    <%= e.text_field :bairro, class: "form-control",  :required => true  %>
  </div>

<div class="field col-4">
    <%= e.label :cidade %>
    <%= e.text_field :cidade, class: "form-control",  :required => true  %>
  </div>

<div class="field col-4">
    <%= e.label :estado %>
    <%= e.text_field :estado, class: "form-control",  :required => true  %>
  </div>

  <div class="field col-4">
    <%= e.label :complemento %>
    <%= e.text_field :complemento, class: "form-control" %>
  </div>
</div>
<%end%>






<div class="actions">
  <%= f.submit "Salvar", class: "btn btn-primary mt-4 mb-3" %>
</div>
<% end %>
